<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:id="@+id/render_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.netease.neliveplayer.playerkit.sdk.view.AdvanceTextureView
            android:id="@+id/live_texture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <com.netease.neliveplayer.playerkit.sdk.view.AdvanceSurfaceView
            android:id="@+id/live_texture_multi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1" />
    </LinearLayout>

    <include
        android:id="@+id/player_control_layout"
        layout="@layout/player_control_layout" />


</RelativeLayout>
